@page "/apex-charts"
@using ApexCharts

<PageTitle>ApexCharts</PageTitle>

<div style="max-width: 50rem;">
    <ApexChart TItem="ApexDataEntry" Title="Sample Data">
        <ApexPointSeries TItem="ApexDataEntry"
                         Items="_dataEntries"
                         Name="Net Profit"
                         SeriesType="SeriesType.Bar"
                         XValue="e => e.Category"
                         YValue="e=> e.NetProfit"
                         Color="#D000FF" />

        <ApexPointSeries TItem="ApexDataEntry"
                         Items="_dataEntries"
                         Name="Revenue"
                         SeriesType="SeriesType.Bar"
                         XValue="e => e.Category"
                         YValue="e=> e.Revenue"
                         Color="#00CBE0" />
    </ApexChart>
</div>

<div style="max-width: 30rem;">
    <ApexChart TItem="ApexDataEntry" Title="Sample Data">
        <ApexPointSeries TItem="ApexDataEntry"
                         Items="_dataEntries"
                         SeriesType="SeriesType.Donut"
                         Name="Gross Value"
                         XValue="e => e.Category"
                         YAggregate="e => e.Sum(e => e.Revenue)"
                         PointColor="e => GetPointColor(e.Category)" />
    </ApexChart>
</div>

<div style="max-width: 50rem;">
    <ApexChart TItem="ApexDataEntry"
               Title="Scatter Sample"
               XAxisType="XAxisType.Numeric" Options="_options">

        <ApexPointSeries TItem="ApexDataEntry"
                         Items="_dataEntries"
                         Name="Dataset 1"
                         SeriesType="SeriesType.Scatter"
                         XValue="e => e.Revenue"
                         YValue="e => e.NetProfit"
                         Color="#D000FF" />

        <ApexPointSeries TItem="ApexDataEntry"
                         Items="_dataEntries2"
                         Name="Dataset 2"
                         SeriesType="SeriesType.Scatter"
                         XValue="e => e.Revenue"
                         YValue="e => e.NetProfit"
                         Color="#00CBE0" />
    </ApexChart>
</div>

<div style="max-width: 50rem;">
    <ApexChart TItem="ApexDataEntry"
               Title="Line Sample">

        <ApexPointSeries TItem="ApexDataEntry"
                         Items="_dataEntries"
                         Name="Dataset 1"
                         SeriesType="SeriesType.Line"
                         XValue="e => e.NetProfit"
                         YAggregate="e => e.Sum(e => e.Revenue)"
                         Color="#D000FF" />

        <ApexPointSeries TItem="ApexDataEntry"
                         Items="_dataEntries2"
                         Name="Dataset 2"
                         SeriesType="SeriesType.Line"
                         XValue="e => e.NetProfit"
                         YAggregate="e => e.Sum(e => e.Revenue)"
                         Color="#00CBE0" />
    </ApexChart>
</div>

<div style="max-width: 50rem;">
    <ApexChart TItem="BoxPlotEntry" Options="_boxPlotOptions">
        <ApexBoxPlotSeries TItem="BoxPlotEntry"
                           Items="_boxPlotEntries"
                           Name="incidents"
                           XValue="e => e.Name"
                           Max="e => e.Max"
                           Min="e => e.Min"
                           Quantile1="e => e.Q1"
                           Quantile3="e => e.Q3"
                           Median="e => e.Median"
                           PointColor="e => GetPointColor(e.Name)" />
    </ApexChart>
</div>

<div style="max-width: 50rem;">
    <ApexChart TItem="ApexDataEntry" Title="Order  Value">

        <ApexPointSeries TItem="ApexDataEntry"
                         Items="_dataEntries"
                         Name="Dataset 1"
                         SeriesType="SeriesType.Radar"
                         XValue="e => e.NetProfit"
                         YAggregate="e => e.Sum(e => e.Revenue)"
                         OrderByDescending="e => e.Y"
                         Color="#D000FF" />

        <ApexPointSeries TItem="ApexDataEntry"
                         Items="_dataEntries2"
                         Name="Dataset 2"
                         SeriesType="SeriesType.Radar"
                         XValue="e => e.NetProfit"
                         YAggregate="e => e.Sum(e => e.Revenue)"
                         OrderByDescending="e => e.Y"
                         Color="#00CBE0" />
    </ApexChart>
</div>
